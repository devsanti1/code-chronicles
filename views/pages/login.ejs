<main class="row m-0 pb-5 d-flex justify-content-center align-items-center">
  <form action="/api/auth/login" method="post" class="needs-validation" novalidate>
    <div class="card bg-primary-subtle col-12 col-md-6 mx-auto d-flex flex-column justify-content-center p-0">
      <div class="card-header text-center">
        <img src="/icons/form.png" alt="form code-chronicles" width="150">
        <h1 class="card-title h2 text-center">Login</h1>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <label class="form-label" for="email">Email: </label>
          <div class="input-group has-validation">
            <i class="fa fa-at input-group-text fw-bolder"></i>
            <input type="email" id="email" name="email" class="form-control" placeholder="youremail@example.com"
              required>
            <div class="invalid-feedback">
              Debe escribir su correo electrónico
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Contraseña: </label>
          <div class="input-group has-validation">
            <i class="fa fa-lock input-group-text fw-bolder"></i>
            <input type="password" id="password" name="password" class="form-control" required>
            <div class="invalid-feedback">
              Escriba su contraseña
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer text-center">
        <input type="submit" class="btn btn-primary" value="Login">
      </div>
    </div>
  </form>
</main>
<script>
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }

      form.classList.add('was-validated')
    }, false)
  })
</script>