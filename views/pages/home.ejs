<div class="row m-0 p-2 p-md-3 p-lg-4 justify-content-center">
  <% data.posts.map(post=> { %>
    <div class="col-12 col-md-6 col-lg-3 card m-3 h-min">
      <div class="card-header">
        <a class="btn nav-link btn-secondary p-3">
          <i class="fa fa-user bg-white p-2 rounded-5"></i>
          <span class="">
            <%= post.author %>
          </span>
        </a>
        <div>
          <% if (post.date_created===post.date_updated) { %>
            <%= post.date_created %>
              <% } else { %>
                <%= post.date_updated %><small>Actualizado</small>
                  <% } %>
        </div>

      </div>
      <a href="/post/<%= post._id %>">
        <h1>
          <%= post.title %>
        </h1>
        <p>
          <%= post.content %>
        </p>
      </a>
    </div>
    <% }); %>
</div>