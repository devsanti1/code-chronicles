<h6>
  <a href="/profile/<%= data.author.username %>">
    <%= data.author.username %>
  </a>
  <%= data.author.email %>:
    <%= data.author.date_created %>

</h6>
<h1>
  <%= data.post.title %>
</h1>
<p>
  <%= data.post.content %>
</p>
<p>
  <% if (data.post.date_created===data.post.date_updated) { %>
    Creado: <%= data.post.date_created %>
      <% } else { %>
        Actualizado: <%= data.post.date_updated %>
          <% } %>
</p>
<ul>
  <% data.comments.map(comment=>{ %>
    <li>
      <h6>
        <%= comment.author %>: <%= comment.date_created %>
      </h6>
      <p>
        <%= comment.content %>
      </p>
    </li>
    <% }) %>
      <% if (data.session.user) { %>
        <form action="/api/posts/<%= data.post._id %>/comments" method="post">
          <textarea name="content" id="" cols="30" rows="10"></textarea>
          <input type="submit" value="Comment">
        </form>
        <% } else { %>
          <form action="" method="post">
            <textarea name="content" id="" cols="30" rows="10" disabled></textarea>
