<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link href="/bootstrap-5.3.3-dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="/bootstrap-5.3.3-dist/js/bootstrap.min.js"></script>
  <title>
    <%= title %>
  </title>
</head>

<body class="bg-dark d-flex flex-column" data-bs-theme="dark">
  <%- include(`../partials/header.ejs`, {user: data.session}) %>
    <%- include(`../pages/${view}.ejs`, {data: data}) %>
      <%- include(`../partials/footer.ejs`)%>
</body>
<script>
  window.onload = () => {
    document.getElementsByTagName("main")[0].style.minHeight = `${window.innerHeight - document.getElementById("header").clientHeight}px`
    document.getElementsByTagName("footer")[0].style.minHeight = `${window.innerHeight - document.getElementById("header").clientHeight}px`
    document.getElementById("scrollTop").addEventListener("click", () => {
      window.scrollTo(0, 0)
    })
    const route = location.pathname.split("/")[1]
    if (route === "register") {
      document.getElementById("registro").classList.replace("btn-success", "btn-light")
      document.getElementById("registro").classList.add("text-decoration-underline")
    } else if (route === "login") {
      document.getElementById("login").classList.replace("btn-outline-success", "btn-light")
      document.getElementById("login").classList.add("text-decoration-underline")
    } else if (route === "create") {
      document.getElementById("create").classList.replace("btn-success", "btn-light")
      document.getElementById("create").classList.add("text-decoration-underline")
    } else if (route === "profile") {
      document.getElementById("profile").classList.replace("btn-outline-light", "btn-light")
      document.getElementById("profile").classList.add("text-decoration-underline")
    }
  }
</script>

</html>